{
  "name": "baby-metric-tracking",
  "version": "1.0.0",
  "description": "Zero-friction baby metrics tracking for families",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:web": "cd packages/web && npm run build:vercel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "storybook": "turbo run storybook",
    "storybook:test": "turbo run storybook:test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianbest/baby-metric-tracking.git"
  },
  "license": "ISC",
  "dependencies": {
    "minimatch": "^10.0.3"
  }
}
